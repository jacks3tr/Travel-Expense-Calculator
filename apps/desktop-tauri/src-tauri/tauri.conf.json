{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Travel Estimator",
  "version": "1.0.0",
  "identifier": "com.travelestimator.app",
  "build": {
    "beforeDevCommand": "npm run -w apps/web dev",
    "beforeBuildCommand": "npm run -w apps/web build",
    "frontendDist": "../../web/dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installMode": "both"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Travel Estimator",
        "width": 1280,
        "height": 860
      }
    ]
  }
}
